<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentsCitas.RangoCuatroEmbarazadasCitasFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mostrar_cbi_2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Circunferencia del brazo izquierdo en la cita (mm)"
                app:errorEnabled="true"
                android:clickable="false"
                app:startIconDrawable="@drawable/brazo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rectangulo_cbi_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:clickable="false"
                    android:textSize="19dp"
                    android:autoSizeTextType="uniform"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mostrar_estatura_2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Estatura de la persona en la cita (m)"
                app:errorEnabled="true"
                android:clickable="false"
                app:startIconDrawable="@drawable/estatura">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rectangulo_estatura_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:clickable="false"
                    android:textSize="19dp"
                    android:autoSizeTextType="uniform"/>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mostrar_imc_2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Indice de masa corporal IMC"
                app:errorEnabled="true"
                android:clickable="false"
                app:startIconDrawable="@drawable/imc">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rectangulo_imc_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:clickable="false"
                    android:textSize="19dp"
                    android:autoSizeTextType="uniform"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solo si estaba embarazada en la fecha"
                    android:textColor="@color/purple_200"
                    android:textSize="15dp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    style="@style/Divider"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBoxEmbarazada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Marque la casilla si se encuentra embarazada"
                android:textSize="19dp"
                android:textStyle="bold"/>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mostrar_ganancia_peso"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ganancia de peso de la persona en la cita (kg)"
                app:errorEnabled="true"
                android:clickable="false"
                app:startIconDrawable="@drawable/aumento_peso">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rectangulo_ganancia_peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:clickable="false"
                    android:textSize="19dp"
                    android:autoSizeTextType="uniform"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mostrar_semanas"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Semanas de gestaciÃ³n"
                app:errorEnabled="true"
                android:clickable="false"
                app:startIconDrawable="@drawable/calendario_mama">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rectangulo_semanas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:clickable="false"
                    android:textSize="19dp"
                    android:autoSizeTextType="uniform"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>